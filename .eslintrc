{
  "extends": "xo/esnext",
  "plugins": [
    "react"
  ],
  "env": {
    "es6": true,
    "mocha": true,
    "node": true
  },
  "ecmaFeatures": {
    "jsx": true
  },
  "rules": {
    "arrow-parens": [
      2,
      "always"
    ],
    "babel/object-curly-spacing": 0,
    "babel/object-shorthand": 0,
    "comma-dangle": [
      2,
      "always-multiline"
    ],
    "key-spacing": [
      2,
      {
        "align": "value",
        "beforeColon": false,
        "afterColon": true
      }
    ],
    "no-mixed-spaces-and-tabs": [
      2,
      "smart-tabs"
    ],
    "no-multi-spaces": [
      2,
      {
        "exceptions": {
          "VariableDeclarator": true
        }
      }
    ],
    "no-new-require": 0,
    "no-warning-comments": [
      1,
      {
        "terms": [
          "todo",
          "fixme",
          "hack"
        ],
        "location": "anywhere"
      }
    ],
    "object-curly-spacing": [
      2,
      "always"
    ],
    "react/jsx-uses-react": 2,
    "react/jsx-uses-vars": 2,
    "react/prop-types": 2,
    "react/sort-comp": [
      2,
      {
        "order": [
          "static-methods",
          "lifecycle",
          "everything-else",
          "/^on.+$/",
          "render"
        ]
      }
    ],
    "space-before-function-paren": [
      2,
      "never"
    ]
  }
}