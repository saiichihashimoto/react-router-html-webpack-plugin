{
  "extends": "xo/esnext",
  "env": {
    "es6": true,
    "mocha": true,
    "node": true
  },
  "rules": {
    "babel/object-curly-spacing": 0,
    "babel/object-shorthand": 0,
    "comma-dangle": [
      2,
      "always-multiline"
    ],
    "key-spacing": [
      2,
      {
        "align": "value",
        "beforeColon": false,
        "afterColon": true
      }
    ],
    "no-mixed-spaces-and-tabs": [
      2,
      "smart-tabs"
    ],
    "no-multi-spaces": [
      2,
      {
        "exceptions": {
          "VariableDeclarator": true
        }
      }
    ],
    "no-new-require": 0,
    "no-warning-comments": [
      1,
      {
        "terms": [
          "todo",
          "fixme",
          "hack"
        ],
        "location": "anywhere"
      }
    ],
    "object-curly-spacing": [
      2,
      "always"
    ],
    "space-before-function-paren": [
      2,
      "never"
    ]
  }
}